<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Sale Point</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/CustomCSS/TopMenu/topMenu.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar-fixed-top" style="background: #6d7fcc;">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Product Sale Point", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="wrapper">
        <div class="row" style="margin: 0; width: 100%;">
            @*<div class="col-md-2" style="padding: 0;">
            @Html.Partial("_SideBarWebsite")
        </div>*@
            <div class="col-md-12 topMenu">
                <div class="container">
                    @Html.Partial("_TopMenuWebsite")
                </div>
            </div>
            <div class="col-md-12 bodyContentWebsite">
                @RenderBody()
                <hr />
                <footer style="height: 40px;">
                    <p class="text-center">Copyright &copy; @DateTime.Now.Year All rights reserved | <strong class="text-primary">Product Sale Point</strong></p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Scripts/mixitup.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <script src="~/CustomJS/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
