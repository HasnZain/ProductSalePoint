<h2 class="text-center">Order Tracking</h2>
<h6 class="text-center">You can check the status of your order. Please enter the order ID and you will get information related to your order.</h6>
<br />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-addon">Order ID</span>
                <input type="number" class="form-control" id="orderTrackInput" placeholder="Enter order id to track" autocomplete="off">
                <div class="input-group-btn">
                    <button class="btn btn-primary" id="btnOrderTrack">Track Order</button>
                </div>
            </div>
            <span class="errText text-danger">Please enter an Order ID</span>
        </div>
        <div class="loader"></div>
        <div class="container dvTrackingContainer">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="trackingHeader">Customer Information</h4>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" class="form-control" id="fullName" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" id="email" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="text" class="form-control" id="phoneNo" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <h4 class="trackingHeader">Shipping Information</h4>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" class="form-control" id="country" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" id="city" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Zip Code</label>
                            <input type="text" class="form-control" id="zipCode" readonly />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" id="address" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <h4 class="trackingHeader">Order Information</h4>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Order DateTime</label>
                            <input type="text" class="form-control" id="orderDateTime" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Order Status</label>
                            <input type="text" class="form-control" id="orderStatus" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Order Amount</label>
                            <input type="text" class="form-control" id="totalAmt" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Payment Method</label>
                            <input type="text" class="form-control" id="paymentMethod" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Shipping Charges</label>
                            <input type="text" class="form-control" id="shipping" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <table class="table table-condensed table-striped table-bordered">
                        <thead class="bg-info">
                            <tr>
                                <th colspan="7" class="text-center">Item Details</th>
                            </tr>
                            <tr>
                                <th style="width: 5%;">Sr#</th>
                                <th style="width: 15%;">Title</th>
                                <th style="width: 20%;">Description</th>
                                <th style="width: 15%;">Category</th>
                                <th style="width: 10%;">Price</th>
                                <th style="width: 10%;">Quantity</th>
                                <th style="width: 10%;">Total</th>
                            </tr>
                        </thead>
                        <tbody id="itemDetailTBody"></tbody>
                        <tfoot id="itemDetailTFoot" class="bg-success"></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

