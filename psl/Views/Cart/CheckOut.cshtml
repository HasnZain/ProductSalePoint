@model psl.Models.ManageUserProfile
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CustomCSS/Cart/checkOut.css" rel="stylesheet" />

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home/index"><i class="fa fa-home"></i> Home</a>
                    <span>Check Out</span>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<!-- Breadcrumb End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form class="checkout__form">
            <div class="row">
                <div class="col-lg-8">
                    <h5>Billing detail</h5>
                    <div class="row">
                        <input type="text" value="@(Model.userID)" id="userID" hidden>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="checkout__form__input">
                                <p>Full Name <span>*</span></p>
                                <input type="text" id="fullName" value="@(Model.FullName)">
                                <span id="errFullName">Full Name is missing</span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Country <span>*</span></p>
                                <input type="text" id="country" value="Pakistan">
                                <span id="errCountry">Country is missing</span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Town/City <span>*</span></p>
                                <input type="text" id="city">
                                <span id="errCity">Town/City is missing</span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Address <span>*</span></p>
                                <input type="text" id="address" placeholder="Street Address">
                                <span id="errAddress">Address is missing</span>
                            </div>
                            <div class="checkout__form__input">
                                <p>Postcode/Zip <span>*</span></p>
                                <input type="text" id="code">
                                <span id="errCode">Postcode/Zip is missing</span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Phone Number <span>*</span></p>
                                <input type="number" id="number" max="11" value="@(Model.PhoneNumber)">
                                <span id="errNumber"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span></p>
                                <input type="email" id="email" value="@(Model.Email)">
                                <span id="errEmail"></span>
                            </div>
                        </div>
                    </div>
                    <h5>Payment Method</h5>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__order__widget">
                                <span id="errMethod"></span>
                                <label for="cash-on-delivery">
                                    Cash on Delivery
                                    <input type="checkbox" id="cash-on-delivery">
                                    <span class="checkmark"></span>
                                </label>
                                <label for="easypaisa-jazzcash">
                                    Easypaisa/Jazzcash
                                    <input type="checkbox" id="easypaisa-jazzcash">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Your order</h5>
                        <div class="checkout__order__product">
                            <ul id="cart_List">
                                <li>
                                    <span class="top__text">Product</span>
                                    <span class="top__text__right">Total</span>
                                </li>

                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Subtotal <span id="subTotal"></span></li>
                                <li>Shipping Charges <span id="shipping"></span></li>
                                <li>Grand Total <span id="grandTotal" total=""></span></li>
                            </ul>
                        </div>
                        <button type="button" class="site-btn" id="btnPlaceOrder" onclick="verifyData()">Place oder</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="alert" id="alertBox" role="alert">
        </div>
    </div>
</section>
<!-- Checkout Section End -->



@section Scripts {
    <script src="~/CustomJS/Cart/checkOut.js"></script>
}